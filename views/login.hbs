<h1>用户登陆</h1>
<form id="login-form" action="/login" method="POST">
	<div>	
		<label>账号</label>
		<input type="text" name="account"/>
	</div>
	<div>	
		<label>密码</label>
		<input type="password" name="psd"/>
	</div>
	<div><input id="submit-btn" type="submit" name="submit" value="登陆"/></div>
	<p id="tip" style="display: none;">登陆失败</p>
</form>
<script type="text/javascript" src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.3.1.js"></script>
<script type="text/javascript">
	$(function() {
		var submitBtn = $('#submit-btn');
		var form = $('#login-form');
		var tip = $('#tip')

		form.on('submit', function(e) {
			tip.hide() //
			e.preventDefault()
			$.ajax({
				url: '/login', 
				type: 'POST',
				data: $('#login-form').serialize(),
				success: function(res) {
					if(res && res.success) {
					console.log(res)
						window.location.href = 'http://localhost:3000/user'
					} else {

						tip.text(res.message).show()
					}
				}
			})
		})
	})
</script>